div(class='col col-md-3')
  div(class='card')
    a(href=`goods/${val['slug']}`)
      h3(class='card-title text-center') #{val['name']}
      img(
        src=`assets/${val['image']}`
        class='card-images'
      )
      p(class='text-center') #{val['cost'].toFixed(2).replace(/\d(?=(\d{3})+\.)/g, '$&   ')} uah
    ul(class='card-actions')
      li
        button(
          class='btn btn-primary add-to-cart'
          data-goods_id = val['id']
        ) to cart